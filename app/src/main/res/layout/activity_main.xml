<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"
        tools:context=".MainActivity">
    <Button
            android:text="Nova partida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="45dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="160dp" android:layout_marginEnd="160dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="640dp"/>
    <ImageButton
            android:layout_width="84dp"
            android:layout_height="81dp" app:srcCompat="@drawable/papel" android:id="@+id/imageButton"
            android:layout_marginTop="216dp" app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"/>
    <ImageButton
            android:layout_width="84dp"
            app:srcCompat="@drawable/pedras"
            android:layout_height="81dp" android:id="@+id/imageButton2"
            android:layout_marginTop="216dp" app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            tools:srcCompat="@drawable/pedras"
            android:layout_marginStart="30dp" app:layout_constraintStart_toEndOf="@+id/imageButton"
            app:layout_constraintEnd_toStartOf="@+id/imageButton3" android:layout_marginEnd="30dp"/>
    <ImageButton
            android:layout_width="84dp"
            app:srcCompat="@drawable/tesouras"
            android:layout_height="81dp" android:id="@+id/imageButton3"
            android:layout_marginTop="216dp" app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            tools:srcCompat="@drawable/tesouras"
            android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.constraintlayout.widget.Group
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="imageButton,imageButton2,imageButton3"
            android:id="@+id/group"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline2"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="22dp"/>


    <TextView
            android:text="@string/app_name"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>
         />
</androidx.constraintlayout.widget.ConstraintLayout>